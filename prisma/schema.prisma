generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

model User {
  id                String              @id @unique @default(uuid())
  name              String
  email             String
  password          String
  dob               String
  gender            String
  image             String?
  verified          Boolean             @default(false)
  about             String?
  role              Role                @default(STUDENT)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  Post              Post[]
  Like              Like[]
  Token             Token[]
  Nofi              Notification[]
  emailVerification emailVerification[]
  RestPassword    RestPassword[]
}

model RestPassword {
  id        String   @id @unique @default(uuid())
  userId    String
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id])
}

model emailVerification {
  id        String   @id @unique @default(uuid())
  userId    String
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id])
}

model Token {
  id        String   @id @unique @default(uuid())
  userId    String
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id])
}

model Catagoery {
  id        String   @id @unique @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Post      Post[]
}

model Post {
  id          String    @id @unique @default(uuid())
  content     String
  latitude    Float?
  longitude   Float?
  image       String?
  authorId    String
  author      User      @relation(fields: [authorId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  Like        Like[]
  catagoeryId String
  Catagoery   Catagoery @relation(fields: [catagoeryId], references: [id])
}

model Like {
  id        String   @id @unique @default(uuid())
  postId    String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Post      Post     @relation(fields: [postId], references: [id])
  User      User     @relation(fields: [userId], references: [id])
}

model Notification {
  id        String   @id @unique @default(uuid())
  userId    String
  type      String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User     @relation(fields: [userId], references: [id])
}
